---
import Portfolio from '../components/Portfolio';
import BrandCarousel from '../components/BrandCarousel';
import ServicesSection from '../components/ServicesSection';
import TestimonialsCarousel from '../components/TestimonialsCarousel';
import YouTubeVideo from '../components/YouTubeVideo';
import ScheduleCall from '../components/ScheduleCall';
import Contact from '../components/Contact';
import Footer from '../components/Footer';
import { getCollection } from 'astro:content';
import BlogListClient from '../components/BlogListClient';
import CaseStudyListClient from '../components/CaseStudyListClient';
import '../styles/global.css';

// Get blog and case study data
const blogs = await getCollection('blog');
const sortedBlogs = blogs.sort((a, b) => b.data.date.localeCompare(a.data.date));

const caseStudies = await getCollection('casestudy');
const sortedCaseStudies = caseStudies.sort((a, b) => b.data.date.localeCompare(a.data.date));
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Nitin Rahane - Full-Stack Developer & UI/UX Designer. Passionate about creating exceptional digital experiences with modern technologies." />
		<meta name="keywords" content="full-stack developer, react developer, typescript, nodejs, web development, portfolio" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://yourwebsite.com/" />
		<meta property="og:title" content="Nitin Rahane - Full-Stack Developer" />
		<meta property="og:description" content="Full-Stack Developer passionate about creating exceptional digital experiences with modern technologies." />
		<meta property="og:image" content="/og-image.jpg" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://yourwebsite.com/" />
		<meta property="twitter:title" content="Nitin Rahane - Full-Stack Developer" />
		<meta property="twitter:description" content="Full-Stack Developer passionate about creating exceptional digital experiences with modern technologies." />
		<meta property="twitter:image" content="/twitter-image.jpg" />

		<title>Nitin Rahane - Full-Stack Developer & UI/UX Designer</title>
		
		<!-- Preconnect to Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	</head>
	<body>
		<!-- 1. Hero Section - First Impression & Navigation -->
		<Portfolio blogs={sortedBlogs} caseStudies={sortedCaseStudies} client:load />
		
		<!-- 2. Brand Credibility - Social Proof Through Companies -->
		<BrandCarousel client:load />
		
		<!-- 3. Services - Clear Value Proposition -->
		<ServicesSection client:load />
		
		<!-- 4. Social Proof - Client Testimonials -->
		<TestimonialsCarousel client:load />
		
		<!-- 5. Personal Connection - Video Introduction -->
		<YouTubeVideo client:load />
		
		<!-- 6. Primary CTA - Schedule Consultation -->
		<div class="py-16 bg-gray-50 dark:bg-gray-900">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<ScheduleCall client:load />
			</div>
		</div>
		
		<!-- 7. Secondary CTA - Contact Form -->
		<Contact client:load />
		
		<!-- 8. Footer - Professional Closure -->
		<Footer client:load />
	</body>
</html>
